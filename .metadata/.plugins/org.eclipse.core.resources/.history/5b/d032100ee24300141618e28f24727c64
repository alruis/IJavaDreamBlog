	<script>
	
	

	
	function mostrar(capa){ 
		var obj = document.getElementById(capa) ;
		if(obj.style.visibility== "hidden")	{
			obj.style.visibility= "visible";
			} else {obj.style.visibility= "hidden";}
	}
	
	
	
	
	
	
