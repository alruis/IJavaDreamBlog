	function ocultarCapas(){ 
		
		var str = "";
	    var patron = "comentario";

	
		var objs = document.getElementsByTagName("div");
		
		
		 

		for(var i=0;i<objs.length;i++){
			if(objs[i].id  != "undefined"){
				str=objs[i].id;
			if(str.indexOf(patron) > -1){
			 objs[i].style.display = "none";
			}
			}
			
		}
			
		
		
	}

	
	</script>
	
		
